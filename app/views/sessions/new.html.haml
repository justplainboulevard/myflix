
%section.sign_in.container
  .row
    .col-sm-10.col-sm-offset-1
      %form.sign_in
        %header
          %h1 Sign in
        %fieldset
          = bootstrap_form_tag url: 'signin', layout: :horizontal, label_col: 'col-sm-2', control_col: 'col-sm-6' do |f|
            = f.email_field :email_address, value: params[:email_address] || ''
            = f.password_field :password, value: params[:password] || ''
            = f.form_group do
              = f.submit 'Sign In'
