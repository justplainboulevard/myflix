
%section.invite.container
  .row
    .col-sm-10.col-sm-offset-1
      %fieldset
        = bootstrap_form_for @invitation, layout: :horizontal, label_col: 'col-sm-2', control_col: 'col-sm-6', class: 'invite' do |f|
          %header
            %h1 Invite a friend to join MyFlix!
            %br
          = f.text_field :friend_name, label: 'Friend\'s Name'
          = f.text_field :friend_email_address, label: 'Friend\'s Email Address'
          = f.text_area :invitation_message, rows: 6, placeholder: 'Please join this really cool site!', label: 'Invitation Message'
          = f.form_group do
            = f.submit 'Send Invitation', class: 'btn btn-default'
